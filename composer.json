{
    "name": "macieklewkowicz/centrala",
    "description": "A central GraphQL API for various services.",
	"require": {
		"php": ">=7.2",
		"webonyx/graphql-php": "^0.13",
		"guzzlehttp/guzzle": "^6.3",
		"jshannon63/jsoncollect": "^1.2"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.0",
		"phpcompatibility/php-compatibility": "^9.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5",
		"object-calisthenics/phpcs-calisthenics-rules": "^3.3",
		"phpro/grumphp": "^0.15",
		"friendsofphp/php-cs-fixer": "^2.12",
		"phpstan/phpstan": "^0.11",
		"phpmd/phpmd": "^2.6",
		"sebastian/phpcpd": "^4.0",
		"phpstan/phpstan-phpunit": "^0.11",
		"phpstan/phpstan-strict-rules": "^0.11",
		"phpspec/phpspec": "^5.0",
		"roave/security-advisories": "dev-master",
		"metasyntactical/composer-plugin-license-check": "^0.4.0",
        "infection/infection": "^0.12.2"
	},
	"scripts": {
		"test": "phpunit tests"
	},
	"autoload": {
		"psr-4": {
			"App\\": ["app/"]
		}
	},
    "autoload-dev": {
        "psr-4": {
            "Tests\\": ["tests/"]
        }
    },
    "extra": {
        "metasyntactical/composer-plugin-license-check": {
            "whitelist": [
                "MIT",
                "BSD-3-Clause",
                "GPL-2.0",
                "GPL-3.0",
                "LGPL-3.0-or-later"
            ],
            "blacklist": []
        }
    }
}
